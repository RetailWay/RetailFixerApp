<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:RetailFixer.Converters"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="0"
        Height="167" Width="400"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        x:Class="RetailFixer.Windows.FiscalWizard">
    <Window.Resources>
        <c:FiscalWizardActivationConverter x:Key="ActivationConverter"/>
    </Window.Resources>
    <Canvas Margin="10">
        <WrapPanel>
            <TextBlock Text="Тип подключения:" VerticalAlignment="Center" Width="200"/>
            <ComboBox Width="180" SelectedIndex="{Binding ConnType, Mode=TwoWay}">
                <ComboBoxItem Content="COM"/>
                <ComboBoxItem Content="USB"/>
                <ComboBoxItem Content="TCP/IP"/>
                <!--ComboBoxItem Content="Bluetooth"/-->
            </ComboBox>
        </WrapPanel>
        <WrapPanel Canvas.Top="36" IsVisible="{Binding ConnType, Converter={StaticResource ActivationConverter}, ConverterParameter=0 }">
            <TextBlock Text="COM-порт:" VerticalAlignment="Center" Width="200"/>
            <ComboBox Width="180" SelectedValue="{Binding SerialPort, Mode=OneWayToSource}" ItemsSource="{Binding SerialPorts}"/>
        </WrapPanel>
        <WrapPanel Canvas.Top="36" IsVisible="{Binding ConnType, Converter={StaticResource ActivationConverter}, ConverterParameter=2 }">
            <TextBlock Text="IP-Адрес:" VerticalAlignment="Center" Width="200"/>
            <TextBox Width="180" Text="{Binding IpAddress, Mode=OneWayToSource}"/>
        </WrapPanel>
        <WrapPanel Canvas.Top="72" IsVisible="{Binding ConnType, Converter={StaticResource ActivationConverter}, ConverterParameter=2 }">
            <TextBlock Text="TCP-Порт:" VerticalAlignment="Center" Width="200"/>
            <NumericUpDown Width="180" Maximum="65535" Minimum="1" FormatString="N0" Value="{Binding TcpPort, Mode=OneWayToSource}"/>
        </WrapPanel>
        <WrapPanel Canvas.Top="36" IsVisible="{Binding ConnType, Converter={StaticResource ActivationConverter}, ConverterParameter=3 }">
            <TextBlock Text="MAC-Адрес:" VerticalAlignment="Center" Width="200"/>
            <ComboBox Width="180" SelectedValue="{Binding MacAddress, Mode=OneWayToSource}" ItemsSource="{Binding BluetoothMacs}"/>
        </WrapPanel>
        <WrapPanel Canvas.Top="36" IsVisible="{Binding ConnType, Converter={StaticResource ActivationConverter}, ConverterParameter=10 }">
            <TextBlock Text="USB-Адрес:" VerticalAlignment="Center" Width="200"/>
            <ComboBox Width="180" SelectedValue="{Binding UsbPath, Mode=OneWayToSource}"/>
        </WrapPanel>
        <Button Content="Отмена" Width="78" HorizontalContentAlignment="Center"  Canvas.Bottom="0" Canvas.Right="100" Click="Close"/>
        <Button Content="Применить" Canvas.Bottom="0" Canvas.Right="0" Click="Apply"/>
    </Canvas>
</Window>
