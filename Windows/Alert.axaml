<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="450" Height="NaN"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        x:Class="RetailFixer.Windows.Alert">
	<StackPanel Margin="10" x:Name="Panel">
		<TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="20" VerticalAlignment="Center"/>
		<TextBlock Text="{Binding Text}" TextWrapping="WrapWithOverflow"/>
		<TextBlock Text="{Binding TagType}" VerticalAlignment="Center" FontSize="10" FontStyle="Italic"/>
		<Button Click="btnClose" Content="OK" HorizontalAlignment="Right"/>
	</StackPanel>
</Window>
